{% include "base.html.twig" %}

{% block javascripts %}
    <script src="{{ asset('build/ckeditor/ckeditor.js') }}"></script>
{% endblock %}

{% block body %}
    {% include "topmenu.html.twig" %}
    <div class="container">
        <div class="row border border-bottom-0 rounded-top">
            <div class="col-sm-8">
                <br>
                <h3 id="title" contenteditable="true">
                    {{ projectInfo['title'] }}
                </h3>
                <br>
                <br>
                <h5 id="shortDescription" contenteditable="true">
                    {{ projectInfo['shortDescription'] }}
                </h5>
                <br>
                <br>
                <h5>
                    Fonduri stranse: {{ projectInfo['pledgedAmount'] }} RON / {{ projectInfo['totalAmount'] }} RON
                </h5>
                <br>
            </div>
            <div class="col-sm-4">
                ALTCEVA
            </div>
        </div>
        <div class="row border border-top-0 rounded-bottom">
            <div class="col-sm-12">
                <div class="progress">
                    <div class="progress-bar progress-bar-striped bg-success" role="progressbar"
                         style="width: {{ completedPercentage }}%" aria-valuenow="{{ completedPercentage }}"
                         aria-valuemin="0" aria-valuemax="100">
                    </div>
                </div>
                <br>
            </div>
            <br>
        </div>
    </div>


    <script>
        CKEDITOR.disableAutoInline = true;
        CKEDITOR.inline('title');
        CKEDITOR.inline('shortDescription');
    </script>
{% endblock %}
