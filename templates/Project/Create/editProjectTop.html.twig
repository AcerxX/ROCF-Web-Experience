<div class="row border border-bottom-0 rounded-top">
    <div class="col-lg-9">
        <br>
        <h3 id="title" contenteditable="true" class="text-primary">
            {{ projectInfo['title'] }}
        </h3>
        <br>
        <br>
        <h5 id="shortDescription" contenteditable="true">
            {{ projectInfo['shortDescription'] | raw }}
        </h5>
    </div>
    <div class="col-lg-3">
        <br>
        <div class="col-lg-12">
            <button type="button" class="btn btn-dark btn-round btn-lg btn-block">Sustine</button>
        </div>
        <br>
        <br>
        <div class="col-lg-12">
            <button type="button" class="btn btn-primary btn-round btn-lg btn-block">Distribuie</button>
        </div>
        <br>
        <br>
        <div class="col-lg-12">
            <button type="button" class="btn btn-danger btn-round btn-lg btn-block">Adauga la favorite</button>
        </div>
        <br>
    </div>
</div>
<div class="row border border-top-0 rounded-bottom">
    <div class="col-lg-12">
        <h6>
            <div style="display: inline-block;vertical-align: middle;"
>           Fonduri stranse: {{ projectInfo['pledgedAmount'] }} RON / </div> <div class="quantity" style="display: inline-block;vertical-align: middle;">
                <input type="number" min="1" step="1" value="{{ projectInfo['totalAmount'] }}">
            </div> RON
        </h6>
        <div class="progress-container progress-success">
            <div class="progress">
                <div class="progress-bar progress-bar-warning" role="progressbar"
                     style="width: {{ completedPercentage }}%" aria-valuenow="{{ completedPercentage }}"
                     aria-valuemin="0" aria-valuemax="100">
                </div>
            </div>
        </div>
        <br>
    </div>
    <br>
</div>

