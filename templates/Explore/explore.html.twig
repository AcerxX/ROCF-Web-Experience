{% extends "base.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://unpkg.com/flickity@2/dist/flickity.min.css">
{% endblock %}

{% block body %}
    {% include "topmenu.html.twig" %}

    <div class="container" style="margin-top: 80px">
        <div class="row">
            <div class="col-12 text-center">
                <div class="input-group input-lg">
                    <input type="text" class="form-control" placeholder="Search project...">
                </div>
            </div>
        </div>
    </div>

    <div class="gallery js-flickity mt-5" id="inner-projects">
        {% for project in projects %}
            <div class="gallery-cell mr-5">
                <div class="card" style="width: 18rem; left: 10px;">
                    <div class="card-body">
                        <h5 class="card-title">{{ project['project_title'] }}</h5>
                        <p class="card-text">{{ project['short_description'] }}</p>
                        <p class="card-text">{{ project['project_pledged_amount'] }}</p>
                        <p class="card-text">{{ project['project_total_amount'] }}</p>
                        <a href="#" class="btn btn-primary">CHECK</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://unpkg.com/flickity@2/dist/flickity.pkgd.min.js"></script>

    <script>
        var elem = document.querySelector('#inner-projects');
        var flkty = new Flickity(elem, {
            // options
            cellAlign: 'left',
            autoPlay: true,
            draggable: true
        });
    </script>
{% endblock %}

